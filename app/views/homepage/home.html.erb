<%= @user.email %>

<%= form_for (Post.new) do |f| %>
  content: <%= f.text_field :content %><br />
  <%= f.hidden_field :user_id, { :value => current_user.id } %>
  <%= f.submit %>
<% end %>

<ul>
	<% @post.each do |post| %>
			<li>			
          <%= post.content %>
					<% if can? :destroy, post %>
						<%= link_to "delete" , post_path(post.id), :method => "delete" %>
					<% end %>
      </li>
   <% end %>
</ul>
