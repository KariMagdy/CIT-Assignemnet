<h2> User : <%= @user.email %> </h2>

</br>

<%= form_for (Post.new) do |f| %>
  Create new post: </br>
  <%= f.text_area :content, :cols => '40', :rows => '5' %><br />
  <%= f.hidden_field :user_id, { :value => current_user.id } %>
  <%= f.submit %>
<% end %>


</br>
<h3>Feed</h3>
<ul>
	<% @posts.each do |post| %>
			<li>			
          <%= post.content %>
					<% if can? :destroy, post %>
						<%= link_to "delete" , post_path(post.id), :method => "delete" %>
					<% end %>
      </li>
   <% end %>
</ul>
