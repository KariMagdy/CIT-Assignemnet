class RelationshipsController < ApplicationController
	before_filter :authenticate_user!

  def create
  	@user = Relationship.find(params[:id]).followed
    current_user.follow!(@user)
    redirect_to @user
  end

  def new
  end

  def destroy
  	@user = Relationship.find(params[:id]).followed
    current_user.unfollow!(@user)
    redirect_to @user
  end
end
